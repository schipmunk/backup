# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
    i3bar_command i3bar
    status_command i3status
    position top

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
    tray_output primary

    bindsym button1 nop
    bindsym button4 nop
    bindsym button5 nop
    font pango:Hasklug Nerd Font Medium 10
    strip_workspace_numbers yes

    colors {
        background #2E3440
        statusline #D8DEE9
        separator  #D8DEE9

#                      border  backgr. text
        focused_workspace  #5E81AC #5E81AC #2E3440
        active_workspace   #4C566A #4C566A #D8DEE9
        inactive_workspace #2E3440 #2E3440 #D8DEE9
        binding_mode       #D8DEE9 #2E3440 #D8DEE9
        urgent_workspace   #D8DEE9 #D8DEE9 #BF616A
    }
}
