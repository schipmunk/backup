# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
    i3bar_command i3bar
    status_command i3status
    position top

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
    tray_output primary

    bindsym button1 nop
    bindsym button4 nop
    bindsym button5 nop
    font pango:Hasklug Nerd Font Medium 10
    strip_workspace_numbers yes

    colors {
        background $tdark1
        statusline $tlight3
        separator  $tlight3

#                          border       backgr.     text
        focused_workspace  $tblue       $tblue      $tdark1
        active_workspace   $tdark4      $tdark4     $tlight3
        inactive_workspace $tdark1      $tdark1     $tlight3
        binding_mode       $tlight3     $tdark1     $tlight3
        urgent_workspace   $tlight3     $tlight3    $tred
    }
}
